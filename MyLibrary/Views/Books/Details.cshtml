@model MyLibrary.Models.BorrowViewModel.BorrowDetailViewModel

@{
    ViewData["Title"] = "Details";
}
<h1>Book Details</h1>

    <h2>Message : You can not borrow or wish list your own books ! </h2>
<div>
   @* <h4>Book</h4>*@
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Language)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Language)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.PublishDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.PublishDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.User.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Category.CategoryName)
        </dd>
    </dl>
</div>
<hr />

@if (Model.IsBorrowed)
{
    <div>
        <h3> The book is not available to borrow </h3>
    </div>
}
else
{
    <form asp-controller="Borrows" asp-action="Create" asp-route-id="@Model.Book.BookId">
        <input type="submit" value="Borrow A Book" class="btn btn-primary" />
    </form>
}
<hr />
@if (Model.IsWishListed)
{
    <div>
        <h3> The book is already in your wish list </h3>
    </div>
}
else
{
    <form asp-controller="WishLists" asp-action="Create" asp-route-id="@Model.Book.BookId">
        <input type="submit" value="Wish List A Book" class="btn btn-primary" />
    </form>
}
<hr />
<div>
    <a asp-action="Types">Back to List</a>
</div>

